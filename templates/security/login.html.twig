{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <!-- Logo Below the Card -->
                    <div class="text-center mt-4">
                        <img src="{{ asset('uploads/images/Logo123.png') }}" alt="Logo" class="img-fluid" style="width: 200px; height: 150px; border-radius: 10px;">
                    </div>
                    <div class="card-header bg-primary text-white text-center rounded-top-4">
                        <h2 class="h4 mb-0">Login</h2>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control rounded-3 shadow-sm" autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" name="password" id="password" class="form-control rounded-3 shadow-sm" autocomplete="current-password" required>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input rounded-2 shadow-sm">
                                <label for="rememberMe" class="form-check-label">Remember me</label>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary rounded-3 shadow-sm">Login</button>
                            </div>

                            <div class="text-center mt-3">
                                <a href="{{ path('app_reset_password') }}" class="text-muted">Forgot password?</a>
                            </div>


                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    Don't have an account? <a href="{{ path('app_register') }}" class="text-primary fw-bold">Sign up</a>
                                </small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
