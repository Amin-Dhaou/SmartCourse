{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <!-- Logo Below the Card -->
                    <div class="text-center mt-4">
                        <img src="{{ asset('uploads/images/Logo123.png') }}" alt="Logo" class="img-fluid" style="width: 200px; height: 150px; border-radius: 10px;">
                    </div>
                    <div class="card-header bg-primary text-white text-center rounded-top-4">
                        <h2 class="h4 mb-0">Forgot Password</h2>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('danger') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}

                        <form method="post">
                            <div class="mb-3">
                                <label for="email" class="form-label">Enter your email</label>
                                <input type="email" name="email" id="email" class="form-control rounded-3 shadow-sm" required>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary rounded-3 shadow-sm">Reset Password</button>
                            </div>
                        </form>

                        <div class="text-center mt-3">
                            <a href="{{ path('app_login') }}" class="text-muted">Back to login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
